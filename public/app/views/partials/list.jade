//Contact List Navbar
header
    div.navbar
        div.navbar-inner
            label.brand Contact List
            div.btn-group.pull-right(class="navbar-buttons")
                a(type="button", id="btnAdd", class="btn", href="/edit"): i.icon-plus

//Contact List
div.contact-list
    ul(class="nav nav-tabs nav-stacked")
        li(id="contact_id", ng-repeat="contact in contacts | orderBy:'last'")
            a(ng-click="edit(contact.id)")
                ul
                    li(id="name_id", class="contact-name") {{contact.last}}, {{contact.first}}
                    li(id="email_id", class="contact-email") {{contact.email}}