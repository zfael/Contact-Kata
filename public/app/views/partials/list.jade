script#list(type='text/ng-template')

  
  //
      div.row
      .col-md-4.col-md-offset-3
        form.search-form(action='')
          .form-group.has-feedback
            label.sr-only(for='search') Search
            input#search.form-control(type='text', name='search', placeholder='search', ng-model="search")
            span.glyphicon.glyphicon-search.form-control-feedback

  table.table.table-hover
        thead
          tr
            //
              th #
            th Name
            th Address
            th Phone Number
            th Delete
            th Edit
        tbody
          tr(ng-repeat="x in contacts |  filter : search", ng-show="x.active")
            //
              td {{x.pos}}
            td {{x.name}}
            td {{x.address}}
            td {{x.phone}}
            td
              button(type="button", class="btn btn-danger fa fa-times", ng-click="remove($index)")
            td
              button(type="button", class="btn btn-primary fa fa-pencil", ng-click="edit($index)")