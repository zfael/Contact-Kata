extends layout

block body
    script(src='scripts/lib/underscore/underscore-min.js')
    script(src='bower_components/angular/angular.js')
    script(src='scripts/app.js')
    script(src='scripts/controllers/mainController.js')
    script(src='scripts/controllers/listController.js')
    script(src='scripts/controllers/newController.js')
    script(src='scripts/controllers/editController.js')

    script(src='scripts/services/ckService.js')

    div.container(ng-controller="MainController")
      nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#') Contact Kata
          #navbar.navbar-collapse.collapse
            ul.nav.navbar-nav
              li(ng-class="{'active': isTabSelected(0)}")
                a#list-button(ng-click="list()") List
              li(ng-class="{'active': isTabSelected(1)}")
                a#new-button(ng-click="new()") New
      .jumbotron
        div(ng-view)

        include partials/list.jade
        include partials/new.jade
        include partials/edit.jade